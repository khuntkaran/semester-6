@{
}
@{
    Layout = "~/Areas/MainPages/Views/Pages/Main.cshtml";
}
@model List<TruckTransportManegment.Areas.MainPages.Models.TruckModel>;
<div class="container mt-5">
    <a class="btn btn-outline-primary " asp-area="MainPages" asp-controller="Truck" asp-action="TruckAddEdit">Add Country</a>


    <table class="table text-center table-striped">
        <thead>
            <tr class="">
                <th scope="col">Truck ID</th>
                <th scope="col">Truck Name</th>
                <th scope="col">Truck Number</th>
                <th scope="col">Truck Type</th>
                <th scope="col">Engine No</th>
                <th scope="col">Chasis No</th>
                <th scope="col">Capacity</th>
                <th scope="col">Price</th>
                <th scope="col">Created</th>
                <th scope="col">Modified</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var truck in Model)
            {
                <tr>
                    <th scope="row">@truck.TruckID</th>
                    <td>@truck.TruckName</td>
                    <td>@truck.TruckType</td>
                    <td>@truck.EngineNo</td>
                    <td>@truck.EngineNo</td>
                    <td>@truck.ChasisNo</td>
                    <td>@truck.Capacity</td>
                    <td>@truck.Price</td>
                    <td>@truck.Created</td>
                    <td>@truck.Modified</td>
                    <td>
                        <form method="post" asp-area="MainPages" asp-controller="Truck" asp-action="TruckAddEdit" asp-route-TruckID="@Convert.ToInt32(truck.TruckID)">
                            <button type="submit" class="btn btn-outline-warning">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-area="MainPages" asp-controller="Truck" asp-action="TruckDelete" asp-route-TruckID="@Convert.ToInt32(truck.TruckID)">
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
